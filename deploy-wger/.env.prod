# =============================================================================
# wger Azure Deployment - Environment Configuration
# =============================================================================
# Copy this file and fill in the values before deploying.
# NEVER commit this file with real secrets to version control.
# =============================================================================

# --- Django Settings ---
SECRET_KEY=change-me-to-a-random-64-char-string
DJANGO_DEBUG=False
SITE_URL=https://your-app-name.azurewebsites.net
CSRF_TRUSTED_ORIGINS=https://your-app-name.azurewebsites.net
TIME_ZONE=UTC

# --- Database (PostgreSQL) ---
POSTGRES_USER=wger
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=wger
DJANGO_DB_ENGINE=django.db.backends.postgresql
DJANGO_DB_DATABASE=wger
DJANGO_DB_USER=wger
DJANGO_DB_PASSWORD=change-me-strong-password
DJANGO_DB_HOST=db
DJANGO_DB_PORT=5432

# --- Cache (Redis) ---
DJANGO_CACHE_BACKEND=django_redis.cache.RedisCache
DJANGO_CACHE_LOCATION=redis://cache:6379/1
DJANGO_CACHE_TIMEOUT=1296000
DJANGO_CACHE_CLIENT_CLASS=django_redis.client.DefaultClient

# --- Celery ---
CELERY_BROKER=redis://cache:6379/2
CELERY_BACKEND=redis://cache:6379/2

# --- Email (optional) ---
# ENABLE_EMAIL=True
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# FROM_EMAIL=wger@example.com

# --- Exercise images/videos (optional) ---
# Set to True to download exercise images from wger.de on first startup
DOWNLOAD_EXERCISE_IMAGES=True
DOWNLOAD_INGREDIENTS_FROM=WGER

# --- Nginx ---
NGINX_PORT=80

# --- Azure-specific (used by deploy-azure.sh) ---
AZURE_RESOURCE_GROUP=wger-rg
AZURE_LOCATION=eastus
AZURE_APP_PLAN=wger-plan
AZURE_APP_NAME=wger-app
AZURE_SKU=B2
